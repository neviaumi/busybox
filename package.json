{
  "author": "David Ng <david.ng.dev@gmail.com>",
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@commitlint/config-lerna-scopes": "16.2.4",
    "eslint": "8.14.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "28.0.2",
    "lerna": "4.0.0",
    "lint-staged": "12.3.8",
    "pinst": "3.0.0",
    "prettier": "2.6.2",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": ">=14",
    "yarn": "Use npm"
  },
  "license": "MIT",
  "name": "busybox",
  "private": true,
  "repository": "git@github.com:davidNHK/busybox.git",
  "scripts": {
    "build": "lerna run build",
    "eslint": "eslint --resolve-plugins-relative-to ./packages/eslint-config --ext=ts,js,json,yml,yaml",
    "lint": "npm run eslint .",
    "lint:fix": "npm run eslint -- --fix .",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "test": "lerna run test"
  },
  "version": "1.0.0",
  "workspaces": [
    "./packages/*"
  ]
